# Production Environment Configuration for Render
NODE_ENV=production
PORT=10000

# Database Configuration (Set this in Render dashboard)
DATABASE_URL="postgresql://username:password@hostname:port/database"

# JWT Configuration (CRITICAL - Set strong secrets in Render dashboard)
JWT_SECRET="your-production-jwt-secret-min-32-characters-long"
JWT_REFRESH_SECRET="your-production-refresh-secret-min-32-characters-long"

# AWS S3 Configuration (Set in Render dashboard)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="your-s3-bucket-name"

# Admin Configuration
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your-secure-admin-password"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret"

# Logging
LOG_LEVEL="info"

# Keep-alive for Render free tier
KEEP_ALIVE_URL="https://your-app-name.onrender.com"
KEEP_ALIVE_INTERVAL=840000
