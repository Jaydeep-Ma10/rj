# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/wingo_db"

# Server Configuration
PORT=10000
PUBLIC_URL="http://localhost:10000"
NODE_ENV="development"

# JWT Configuration (REQUIRED - Generate secure secrets)
JWT_SECRET="your-super-secure-jwt-secret-here-min-32-chars"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-here-min-32-chars"

# AWS S3 Configuration (Optional - will fallback to local storage if not configured)
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="your-s3-bucket-name"

# SMS Provider Configuration (Optional - uses mock SMS if not configured)
SMS_PROVIDER="mock"
SMS_API_KEY="your-sms-api-key"
SMS_API_URL="https://api.sms-provider.com/send"

# Admin Configuration
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your-secure-admin-password"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf"

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-here"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Keep-alive Configuration (for Render free tier)
KEEP_ALIVE_URL="https://your-app.onrender.com"
KEEP_ALIVE_INTERVAL=840000
